<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/title_top_view"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.ling.kotlin.widget.CustomVideoView
                android:id="@+id/register_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        <com.ling.kotlin.widget.CircleImageView
                android:id="@+id/register_logo_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@mipmap/app_logo"
                android:contentDescription="@null"/>
        <TextView
                android:id="@+id/register_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/register_logo_iv"
                android:text="@string/app_name"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_account_tl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:theme="@style/CustomAppTheme_textinputLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/register_name_tv">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/app_register_account_hint"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:text="ling2"
                    android:textColor="@android:color/white"
                    android:paddingLeft="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_create_pwd_tl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:theme="@style/CustomAppTheme_textinputLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/register_account_tl">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/app_register_pwd_hint"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:text="123456"
                    android:textColor="@android:color/white"
                    android:paddingLeft="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_rep_pwd_tl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:theme="@style/CustomAppTheme_textinputLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/register_create_pwd_tl">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/app_register_repwd_hint"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:text="123456"
                    android:textColor="@android:color/white"
                    android:paddingLeft="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_china_name_tl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:theme="@style/CustomAppTheme_textinputLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/register_rep_pwd_tl">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/app_register_realname_hint"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:text="测试"
                    android:textColor="@android:color/white"
                    android:paddingLeft="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_phone_tl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:theme="@style/CustomAppTheme_textinputLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/register_china_name_tl">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/app_register_phone_number_hint"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:text="15789614788"
                    android:textColor="@android:color/white"
                    android:paddingLeft="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
                android:id="@+id/register_create_account_tv"
                android:textSize="20sp"
                android:layout_width="320dp"
                android:layout_height="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_phone_tl"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_corners_selector_red_login_drawable"
                android:text="创建账号"
                android:gravity="center"
                android:textColor="@color/white"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:text="@string/app_register_regular_color"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_create_account_tv"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="11sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>