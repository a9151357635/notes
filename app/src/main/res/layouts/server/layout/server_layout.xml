<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">

    <include layout="@layout/title_top_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:background="@color/app_main_tab_background_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/server_home_online_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/server_online_icon"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/app_text_main_another_normal_color"
            android:background="@drawable/stroke_ripple_nomask_selector_drawable"
            android:text="@string/server_online_hint" />

        <TextView
            android:id="@+id/server_home_qq_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:drawablePadding="6dp"
            android:textSize="12sp"
            android:textColor="@color/app_text_main_another_normal_color"
            android:drawableTop="@mipmap/server_qq_icon"
            android:background="@drawable/stroke_ripple_nomask_selector_drawable"
            android:gravity="center"
            android:text="@string/server_qq_hint" />

        <TextView
            android:id="@+id/server_home_weixin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:drawablePadding="6dp"
            android:textSize="12sp"
            android:background="@drawable/stroke_ripple_nomask_selector_drawable"
            android:drawableTop="@mipmap/server_weixin_icon"
            android:gravity="center"
            android:textColor="@color/app_text_main_another_normal_color"
            android:text="@string/server_weixin_hint" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/server_home_proxy_ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/server_file_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/server_proxy_title_hint"
                android:textColor="@color/app_text_main_normal_color"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/app_text_three_normal_color"
                android:text="@string/server_proxy_content_hint"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/server_home_discounts_ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:contentDescription="@null"
            android:src="@mipmap/server_discounts_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/app_fount_color"
                android:text="@string/server_discounts_title_hint"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/app_fount_color"
                android:text="@string/server_discounts_content_hint"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/next_icon" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/server_home_question_ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:contentDescription="@null"
            android:src="@mipmap/server_question_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/app_text_main_normal_color"
                android:text="@string/server_question_tile_hint"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/app_text_three_normal_color"
                android:text="@string/server_question_content_hint"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/next_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/server_home_complain_ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:contentDescription="@null"
            android:src="@mipmap/server_complain_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/app_text_main_normal_color"
                android:text="@string/server_complain_title_hint"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/app_text_three_normal_color"
                android:text="@string/server_complain_content_hint"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>