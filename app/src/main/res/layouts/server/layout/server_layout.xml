<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background_color"
              android:orientation="vertical">

    <include layout="@layout/title_top_view" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@color/app_main_tab_background_color"
                    android:gravity="center"
                    android:orientation="horizontal">
                <!--android:drawableTop="@drawable/ic_server_online"-->
                <TextView
                        android:id="@+id/server_home_online_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.0"
                        android:background="@drawable/stroke_ripple_nomask_selector_drawable"
                        android:drawableTop="@drawable/ic_server_online"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:text="@string/server_online_hint"
                        android:textColor="@color/app_text_main_another_normal_color"
                        android:textSize="12sp" />

                <!--  android:drawableTop="@drawable/ic_server_qq"-->
                <TextView
                        android:id="@+id/server_home_qq_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.0"
                        android:background="@drawable/stroke_ripple_nomask_selector_drawable"
                        android:drawableTop="@drawable/ic_server_qq"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:text="@string/server_qq_hint"
                        android:textColor="@color/app_text_main_another_normal_color"
                        android:textSize="12sp" />

                <TextView
                        android:id="@+id/server_home_weixin_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.0"
                        android:background="@drawable/stroke_ripple_nomask_selector_drawable"
                        android:drawableTop="@drawable/ic_server_weixin"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:text="@string/server_weixin_hint"
                        android:textColor="@color/app_text_main_another_normal_color"
                        android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/server_home_proxy_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_server_file" />

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/server_proxy_title_hint"
                            android:textColor="@color/app_text_main_normal_color"
                            android:textSize="15sp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/server_proxy_content_hint"
                            android:textColor="@color/app_text_three_normal_color"
                            android:textSize="12sp" />
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:drawableRight="@drawable/ic_next"
                        android:drawablePadding="10dp" />
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/server_home_discounts_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_server_discounts" />

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/server_discounts_title_hint"
                            android:textColor="@color/app_fount_color"
                            android:textSize="15sp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/server_discounts_content_hint"
                            android:textColor="@color/app_fount_color"
                            android:textSize="12sp" />
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:drawableRight="@drawable/ic_next"
                        android:drawablePadding="10dp" />
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/server_home_question_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_server_question" />

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/server_question_tile_hint"
                            android:textColor="@color/app_text_main_normal_color"
                            android:textSize="15sp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/server_question_content_hint"
                            android:textColor="@color/app_text_three_normal_color"
                            android:textSize="12sp" />
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:drawableRight="@drawable/ic_next"
                        android:drawablePadding="10dp" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/server_home_complain_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_server_complain" />

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/server_complain_title_hint"
                            android:textColor="@color/app_text_main_normal_color"
                            android:textSize="15sp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/server_complain_content_hint"
                            android:textColor="@color/app_text_three_normal_color"
                            android:textSize="12sp" />
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:drawableRight="@drawable/ic_next"
                        android:drawablePadding="10dp" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/server_home_telephone_ll"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_server_telephone" />

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/server_telephone_title_hint"
                            android:textColor="@color/app_text_main_normal_color"
                            android:textSize="15sp" />

                    <TextView
                            android:id="@+id/server_home_telephone_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="tel:+1860258453"
                            android:textColor="@color/app_text_three_normal_color"
                            android:textSize="12sp" />
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:drawableRight="@drawable/ic_next"
                        android:drawablePadding="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>