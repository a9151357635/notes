<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/download_layout_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/route_stroke_white_bg"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="@string/app_update_version_hint"
        android:textColor="@color/app_text_main_another_normal_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/update_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fadeScrollbars="false"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:scrollbars="vertical"
        android:textColor="@color/app_text_main_another_normal_color"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/update_progress"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:max="100"
        android:paddingEnd="20dp"
        android:paddingStart="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="25dp"
        android:paddingStart="25dp">

        <TextView
            android:id="@+id/update_progress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_text_main_another_normal_color"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/update_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_text_main_another_normal_color"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/update_double_click_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corners_selector_red_drawable"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="@string/app_update_manual_hint"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
</LinearLayout>