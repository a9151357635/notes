<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bet_drawer_user_info_cl"
            android:layout_width="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_fill_red_head_drawable"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content">
    <com.ling.kotlin.widget.CircleImageView
            android:id="@+id/bet_drawer_icon_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="@null"
            android:src="@mipmap/default_icon"/>
    <TextView
            android:id="@+id/bet_drawer_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bet_drawer_icon_iv"
            android:text="Ling36"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bet_drawer_level_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/stroke_me_level_red_drawable"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/bet_drawer_icon_iv"
            app:layout_constraintStart_toEndOf="@+id/bet_drawer_username_tv">
        <TextView
                android:id="@+id/bet_drawer_level_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="至尊赌神"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:id="@+id/bet_drawer_level_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="11sp"
                android:background="@drawable/ic_me_vip_one"
                android:textColor="@color/app_select_text_color"
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                app:layout_constraintStart_toEndOf="@+id/bet_drawer_level_name_tv"
                android:text="VIP16"
                android:textStyle="italic|bold"
                android:paddingRight="3dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:id="@+id/bet_drawer_balance_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="可用余额"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bet_drawer_username_tv"
            android:textSize="12sp"/>
    <TextView
            android:id="@+id/bet_drawer_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:text="0.0元"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/bet_drawer_balance_hint"
            app:layout_constraintTop_toBottomOf="@+id/bet_drawer_username_tv"
            android:textSize="18sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bet_drawer_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bet_drawer_user_info_cl"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>