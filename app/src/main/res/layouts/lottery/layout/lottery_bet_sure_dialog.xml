<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/app_main_tab_background_color">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_fill_red_head_drawable">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="跟注"
                    android:textColor="@color/white"
                    android:textSize="17sp"/>

            <ImageView
                    android:id="@+id/lottery_sure_close_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_close"
                    android:contentDescription="@null"/>
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/lottery_sure_period_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                    android:id="@+id/lottery_sure_name_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lottery_sure_period_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:text="游戏名:"
                    android:textColor="@color/app_text_main_another_normal_color"/>

            <TextView
                    android:id="@+id/lottery_sure_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="玩法6"
                    app:layout_constraintTop_toBottomOf="@+id/lottery_sure_period_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/lottery_sure_name_hint_tv"
                    android:textColor="@color/app_text_main_another_normal_color"/>
            <TextView
                    android:id="@+id/lottery_sure_number_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/lottery_shortcut_hint"
                    app:layout_constraintTop_toBottomOf="@+id/lottery_sure_period_tv"
                    app:layout_constraintEnd_toStartOf="@+id/lottery_sure_number_et"
                    android:textColor="@color/app_text_main_another_normal_color"/>
            <EditText
                    android:id="@+id/lottery_sure_number_et"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/lottery_sure_period_tv"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    android:inputType="number"
                    android:maxLength="7"
                    android:textColor="@color/app_text_main_another_normal_color"
                    android:textCursorDrawable="@drawable/shape_editext_cursor_drawable"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="270dp">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lottery_sure_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/app_e1e1e2_color"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/lottery_sure_max_hint_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/app_main_tab_background_color"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="12dp"
                    android:text="@string/lottery_min_max_hint"
                    android:textColor="@color/app_text_main_another_normal_color"/>

            <TextView
                    android:id="@+id/lottery_sure_total_amount_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/lottery_bet_money_hint"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lottery_sure_max_hint_tv"
                    android:textColor="@color/app_text_main_another_normal_color"/>

            <TextView
                    android:id="@+id/lottery_sure_total_amount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/lottery_sure_total_amount_hint"
                    app:layout_constraintStart_toEndOf="@+id/lottery_sure_total_amount_hint"
                    app:layout_constraintTop_toBottomOf="@+id/lottery_sure_max_hint_tv"
                    android:textColor="@color/app_fount_color"/>

            <Button
                    android:id="@+id/lottery_sure_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lottery_sure_max_hint_tv"
                    android:background="@drawable/stroke_ripple_bet_sure_drawable"
                    android:gravity="center"
                    android:text="@string/app_sure_hint"
                    android:textColor="@android:color/white"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>