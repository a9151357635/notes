<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">
    <TextView
            android:id="@+id/lottery_sure_item_play_name_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="12dp"
            android:text="玩法:"
            android:textColor="@color/app_text_main_another_normal_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/lottery_sure_item_play_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="组选六"
            android:maxLines="5"
            android:inputType="textMultiLine"
            android:textColor="@color/app_text_main_another_normal_color"
            app:layout_constraintStart_toEndOf="@+id/lottery_sure_item_play_name_hint_tv"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/lottery_sure_item_adds_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/lottery_sure_item_play_name_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="赔率:"
            android:textColor="@color/app_text_main_another_normal_color"/>
    <TextView
            android:id="@+id/lottery_sure_item_adds_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/lottery_sure_item_play_name_tv"
            app:layout_constraintStart_toEndOf="@+id/lottery_sure_item_adds_hint_tv"
            android:text="赔率"
            android:textColor="@color/app_fount_color"/>
    <TextView
            android:id="@+id/lottery_sure_item_money_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="12dp"
            android:textColor="@color/app_text_main_another_normal_color"
            android:text="金额:"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toBottomOf="@+id/lottery_sure_item_adds_hint_tv"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:id="@+id/lottery_sure_item_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/app_fount_color"
            android:text="10.0"
            app:layout_constraintTop_toBottomOf="@+id/lottery_sure_item_adds_hint_tv"
            app:layout_constraintStart_toEndOf="@+id/lottery_sure_item_money_hint_tv"/>
    <ImageView
            android:id="@+id/lottery_sure_item_close_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_close_gray"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/lottery_sure_item_money_hint_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:background="@color/app_e1e1e2_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>