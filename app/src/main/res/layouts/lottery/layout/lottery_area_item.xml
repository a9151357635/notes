<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/lottery_area_item_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="17sp"
            android:textColor="@color/app_fount_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <View
            android:id="@+id/lottery_area_item_type_line_tv"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/app_e1e1e2_color"
            app:layout_constraintTop_toBottomOf="@+id/lottery_area_item_type_tv"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lottery_area_item_content_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lottery_area_item_type_line_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>