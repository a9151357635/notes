<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bet_open_cl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/bet_period_first_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="第"
            android:textColor="@color/app_text_main_another_normal_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent"/>
    <TextView
            android:id="@+id/bet_period_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0344"
            android:gravity="center"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bet_period_first_tv"
            app:layout_constraintTop_toBottomOf="parent"
            android:textColor="@color/app_fount_color"
            android:textSize="16sp"/>
    <TextView
            android:id="@+id/bet_period_last_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="期"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="parent"
            android:textColor="@color/app_text_main_another_normal_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bet_period_tv"/>
    <TextView
            android:id="@+id/bet_period_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离开奖:"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bet_period_last_tv"
            android:textColor="@color/app_text_main_another_normal_color"/>

    <cn.iwgang.countdownview.CountdownView
            android:id="@+id/bet_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bet_period_hint_tv"
            app:layout_constraintTop_toBottomOf="parent"
            android:singleLine="true"
            app:isHideTimeBackground="true"
            app:isShowHour="true"
            app:isShowMillisecond="false"
            app:isShowMinute="true"
            app:isTimeTextBold="false"
            app:suffix=":"
            app:suffixGravity="center"
            app:suffixLRMargin="0.5dp"
            app:suffixTextColor="@color/app_fount_color"
            app:suffixTextSize="20sp"
            app:timeTextColor="@color/app_fount_color"
            app:timeTextSize="20sp"/>
    <View
            android:id="@+id/bet_history_line"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/app_e1e1e2_color"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            app:layout_constraintTop_toBottomOf="@+id/bet_period_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>