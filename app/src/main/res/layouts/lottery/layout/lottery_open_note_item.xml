<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
                                                   android:orientation="vertical">

    <ImageView
            android:id="@+id/open_note_item_icon_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/app_german_racing_icon"
            android:contentDescription="@null" />
    <TextView
            android:id="@+id/open_note_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@+id/open_note_item_icon_iv"
            android:textColor="@color/app_text_main_another_normal_color" />


    <TextView
            android:id="@+id/open_note_item_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/open_note_item_name_tv"
            app:layout_constraintStart_toEndOf="@+id/open_note_item_icon_iv"
            android:textColor="@color/app_text_main_another_normal_color" />

    <TextView
            android:id="@+id/open_note_item_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/open_note_item_content_tv"
            app:layout_constraintStart_toEndOf="@+id/open_note_item_icon_iv"
            android:textColor="@color/app_text_main_another_normal_color" />

    <TextView
            android:id="@+id/open_note_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/open_note_item_detail_tv"
            app:layout_constraintStart_toEndOf="@+id/open_note_item_icon_iv"
            android:textColor="@color/app_text_main_another_normal_color" />

    <TextView
            android:id="@+id/open_note_item_cancel_btn"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/stroke_ripple_bet_sure_drawable"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="撤单"
            android:layout_marginRight="12dp"
            android:textColor="@android:color/white" />
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/app_e1e1e2_color" />
</androidx.constraintlayout.widget.ConstraintLayout>