<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bet_home_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_fill_red_bg_drawable"
        android:clipToPadding="true"
        android:paddingTop="25dp">


    <TextView
            android:id="@+id/bet_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/stroke_ripple_nomask_red_selector_drawable"
            android:contentDescription="@null"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:drawableLeft="@mipmap/back_white_icon"/>
    <TextView
            android:id="@+id/bet_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/bet_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginLeft="6dp"
            android:drawableRight="@drawable/ic_menu"
            android:drawablePadding="6dp"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    <TextView
            android:id="@+id/bet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="17sp"/>

    <TextView
            android:id="@+id/bet_cur_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/ic_current_note"
            android:text="未结注单"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bet_helper"
            app:layout_constraintTop_toTopOf="parent"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/white"
            android:textSize="10sp"/>

    <TextView
            android:id="@+id/bet_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:drawablePadding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_helper"
            android:text="投注助手"
            android:textColor="@color/white"
            android:textSize="10sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>