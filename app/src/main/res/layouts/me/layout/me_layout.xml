<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_background_color">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/shape_fill_red_semicircle_drawable"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/me_home_setting_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/stroke_ripple_nomask_red_selector_drawable"
                android:contentDescription="@null"
                android:src="@mipmap/me_setting_while_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
                android:id="@+id/me_home_bet_history_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/route_stroke_white_bg"
                android:translationZ="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/me_home_username_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Ling36"
                        android:textColor="@color/app_text_main_normal_color"
                        android:textSize="20sp" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="12dp"
                        android:background="@color/app_e1e1e2_color" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/me_home_bet_history_open_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.0"
                            android:background="@drawable/stroke_ripple_mask_selector_drawable"
                            android:drawableTop="@mipmap/me_wait_lottery_icon"
                            android:drawablePadding="8dp"
                            android:gravity="center"
                            android:text="待开奖"
                            android:textColor="@color/app_text_main_another_normal_color" />

                    <View
                            android:layout_width="0.5dp"
                            android:layout_height="38dp"
                            android:background="@color/app_e1e1e2_color" />

                    <TextView
                            android:id="@+id/me_home_bet_history_winning_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.0"
                            android:background="@drawable/stroke_ripple_mask_selector_drawable"
                            android:drawableTop="@mipmap/me_winning_icon"
                            android:drawablePadding="8dp"
                            android:gravity="center"
                            android:text="已中奖"
                            android:textColor="@color/app_text_main_another_normal_color" />

                    <View
                            android:layout_width="0.5dp"
                            android:layout_height="38dp"
                            android:background="@color/app_e1e1e2_color" />

                    <TextView
                            android:id="@+id/me_home_bet_history_not_winning_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.0"
                            android:background="@drawable/stroke_ripple_mask_selector_drawable"
                            android:drawableTop="@mipmap/me_win_not_icon"
                            android:drawablePadding="8dp"
                            android:gravity="center"
                            android:text="未中奖"
                            android:textColor="@color/app_text_main_another_normal_color" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:id="@+id/me_home_item_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/route_stroke_white_bg"
                android:orientation="vertical"
                android:translationZ="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/me_home_bet_history_rl">


            <LinearLayout
                    android:id="@+id/me_home_person_ll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/stroke_ripple_mask_selector_drawable"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1.0"
                        android:drawableLeft="@mipmap/me_home_personal_icon"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="个人中心"
                        android:textColor="@color/app_text_main_another_normal_color"
                        android:textSize="15sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="12dp"
                        android:drawableRight="@mipmap/next_icon"
                        android:drawablePadding="10dp" />

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/app_e1e1e2_color" />

            <LinearLayout
                    android:id="@+id/me_home_wallet_ll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/stroke_ripple_mask_selector_drawable"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1.0"
                        android:drawableLeft="@mipmap/me_wallet_icon"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="我的钱包"
                        android:textColor="@color/app_text_main_another_normal_color"
                        android:textSize="15sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="12dp"
                        android:drawableRight="@mipmap/next_icon"
                        android:drawablePadding="10dp"
                        android:text="查看交易明细"
                        android:textColor="@color/app_fount_color"
                        android:textSize="15sp" />

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/app_e1e1e2_color" />

            <LinearLayout
                    android:id="@+id/me_home_message_ll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/stroke_ripple_mask_selector_drawable"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1.0"
                        android:drawableLeft="@mipmap/me_message_icon"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="消息中心"
                        android:textColor="@color/app_text_main_another_normal_color"
                        android:textSize="15sp" />

                <TextView
                        android:id="@+id/me_home_message_unread_count_tv"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/red_white_point_drawable"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:visibility="visible" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="12dp"
                        android:drawableRight="@mipmap/next_icon"
                        android:drawablePadding="10dp" />
            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/app_e1e1e2_color" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/app_e1e1e2_color" />


            <LinearLayout
                    android:id="@+id/me_home_level_ll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/stroke_ripple_mask_selector_drawable"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1.0"
                        android:drawableLeft="@mipmap/me_level_icon"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/me_level_title_hint"
                        android:textColor="@color/app_text_main_another_normal_color"
                        android:textSize="15sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="12dp"
                        android:drawableRight="@mipmap/next_icon"
                        android:drawablePadding="10dp" />

            </LinearLayout>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/me_home_item_ll"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="50dp"
                app:cardElevation="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <com.ling.kotlin.widget.CircleImageView
                    android:id="@+id/me_home_icon_iv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/stroke_ripple_nomask_red_selector_drawable"
                    android:contentDescription="@null"
                    android:src="@mipmap/default_icon" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>



