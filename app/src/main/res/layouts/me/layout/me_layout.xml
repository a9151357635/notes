<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/me_home_head_fl"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:paddingTop="15dp"
            android:background="@drawable/shape_fill_red_bg_me_head_drawable">

            <ImageView
                android:id="@+id/me_home_icon_iv"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@null"
                android:background="@drawable/stroke_ripple_nomask_red_selector_drawable"
                android:src="@mipmap/default_icon" />

            <TextView
                android:id="@+id/me_home_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/me_home_server_iv"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-10dp"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/me_home_icon_iv"
                android:layout_toRightOf="@+id/me_home_icon_iv"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/me_home_setting_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/stroke_ripple_nomask_red_selector_drawable"
                android:contentDescription="@null"
                android:src="@mipmap/me_setting_while_icon" />

            <ImageView
                android:id="@+id/me_home_server_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/me_home_setting_iv"
                android:background="@drawable/stroke_ripple_nomask_red_selector_drawable"
                android:contentDescription="@null"
                android:src="@mipmap/me_server_icon" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/me_home_money_ll"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@id/me_home_head_fl"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="-55dp"
            android:background="@drawable/route_stroke_white_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/me_home_money_available_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/me_home_money_available_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/app_fount_color"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/me_home_money_available_refresh_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="可用余额"
                        android:drawablePadding="8dp"
                        android:textColor="@color/app_text_main_another_normal_color"
                        android:background="@drawable/stroke_ripple_mask_selector_drawable"
                        android:drawableRight="@mipmap/me_refresh_icon"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/app_e1e1e2_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/me_home_money_open_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/app_fount_color"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="未结金额 "
                        android:textColor="@color/app_text_main_another_normal_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/app_e1e1e2_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/me_home_pay_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/stroke_ripple_mask_selector_drawable"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/me_pay_icon"
                        android:drawablePadding="13dp"
                        android:gravity="center"
                        android:text="充值"
                        android:textColor="#fea213"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:background="@color/app_e1e1e2_color" />

                <LinearLayout
                    android:id="@+id/me_home_withdraw_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/stroke_ripple_mask_selector_drawable"
                    android:gravity="center">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/me_withdraw_icon"
                        android:drawablePadding="13dp"
                        android:gravity="center"
                        android:text="提现"
                        android:textColor="#218cdc"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/me_home_bet_history_rl"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/me_home_money_ll"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/route_stroke_white_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/me_home_bet_history_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:drawableLeft="@mipmap/me_lottery_history_icon"
                android:drawablePadding="8dp"
                android:textColor="@color/app_text_main_another_normal_color"
                android:background="@drawable/stroke_ripple_mask_selector_drawable"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/next_icon"
                android:layout_marginRight="12dp"
                android:text="投注记录"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/app_e1e1e2_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/me_home_bet_history_open_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:drawablePadding="8dp"
                    android:drawableTop="@mipmap/me_wait_lottery_icon"
                    android:background="@drawable/stroke_ripple_mask_selector_drawable"
                    android:gravity="center"
                    android:textColor="@color/app_text_main_another_normal_color"
                    android:text="待开奖" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="38dp"
                    android:background="@color/app_e1e1e2_color" />

                <TextView
                    android:id="@+id/me_home_bet_history_winning_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:drawablePadding="8dp"
                    android:background="@drawable/stroke_ripple_mask_selector_drawable"
                    android:drawableTop="@mipmap/me_winning_icon"
                    android:gravity="center"
                    android:textColor="@color/app_text_main_another_normal_color"
                    android:text="已中奖" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="38dp"
                    android:background="@color/app_e1e1e2_color" />

                <TextView
                    android:id="@+id/me_home_bet_history_not_winning_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:drawablePadding="8dp"
                    android:background="@drawable/stroke_ripple_mask_selector_drawable"
                    android:drawableTop="@mipmap/me_win_not_icon"
                    android:gravity="center"
                    android:textColor="@color/app_text_main_another_normal_color"
                    android:text="未中奖" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/me_home_bet_history_rl"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/route_stroke_white_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/me_home_wallet_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/stroke_ripple_mask_selector_drawable"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1.0"
                    android:drawableLeft="@mipmap/me_wallet_icon"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="我的钱包"
                    android:textColor="@color/app_text_main_another_normal_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/next_icon"
                    android:text="查看交易明细"
                    android:textColor="@color/app_fount_color"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/app_e1e1e2_color" />

            <LinearLayout
                android:id="@+id/me_home_person_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/stroke_ripple_mask_selector_drawable"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1.0"
                    android:drawableLeft="@mipmap/me_home_personal_icon"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="个人中心"
                    android:textColor="@color/app_text_main_another_normal_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/next_icon" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/app_e1e1e2_color" />

            <LinearLayout
                android:id="@+id/me_home_check_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/stroke_ripple_mask_selector_drawable"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1.0"
                    android:drawableLeft="@mipmap/me_check_icon"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="实时稽核"
                    android:textColor="@color/app_text_main_another_normal_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/next_icon" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/app_e1e1e2_color" />

            <LinearLayout
                android:id="@+id/me_home_message_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/stroke_ripple_mask_selector_drawable"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1.0"
                    android:drawableLeft="@mipmap/me_message_icon"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="消息中心"
                    android:textColor="@color/app_text_main_another_normal_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/next_icon" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>



