<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/image_choose_album_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="14sp"
        android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
        android:text="@string/me_user_info_photo_album"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_e1e1e2_color" />

    <TextView
        android:id="@+id/image_choose_camera_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
        android:text="@string/me_user_info_photo_camera"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/app_e1e1e2_color" />

    <TextView
        android:id="@+id/image_choose_cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
        android:text="@string/app_cancel_hint"
        android:textColor="@color/black" />
</LinearLayout>