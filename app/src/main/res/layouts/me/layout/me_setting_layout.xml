<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@color/app_background_color"
                                                   android:orientation="vertical">

    <include
            android:id="@id/title_rl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            layout="@layout/title_top_view" />

    <TextView
            android:id="@+id/me_setting_change_pay_pwd_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
            android:drawableLeft="@drawable/ic_pay_pwd"
            android:drawablePadding="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_rl"
            android:drawableRight="@drawable/ic_next"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/me_setting_change_pay_pwd_hint"
            android:textColor="@color/app_text_main_another_normal_color"
            android:textSize="15sp" />

    <View
            android:id="@+id/me_setting_change_pay_pwd_v"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/me_setting_change_pay_pwd_tv"
            android:background="@color/app_e1e1e2_color" />

    <TextView
            android:id="@+id/me_setting_change_pwd_login_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/me_setting_change_pay_pwd_v"
            android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
            android:drawableLeft="@drawable/ic_account_pwd"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_next"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/me_setting_change_login_pwd_hint"
            android:textColor="@color/app_text_main_another_normal_color"
            android:textSize="15sp" />


    <View
            android:id="@+id/me_setting_change_pwd_login_v"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/me_setting_change_pwd_login_tv"
            android:background="@color/app_e1e1e2_color" />


    <TextView
            android:id="@+id/me_setting_clear_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/me_setting_change_pwd_login_v"
            android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
            android:drawableLeft="@drawable/ic_me_clear_cache"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/me_setting_clear_hint"
            android:textColor="@color/app_text_main_another_normal_color"
            android:textSize="15sp" />

    <View
            android:id="@+id/me_setting_change_clear_v"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/me_setting_clear_tv"
            android:background="@color/app_e1e1e2_color" />

    <TextView
            android:id="@+id/me_setting_about_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
            android:drawableLeft="@drawable/ic_me_about"
            android:drawablePadding="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/me_setting_change_clear_v"
            android:drawableRight="@drawable/ic_next"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/me_setting_about_hint"
            android:textColor="@color/app_text_main_another_normal_color"
            android:textSize="15sp" />


    <View
            android:id="@+id/me_setting_about_v"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/me_setting_about_tv"
            android:background="@color/app_e1e1e2_color" />


    <TextView
            android:id="@+id/me_setting_logout_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_corners_selector_red_drawable"
            android:gravity="center"
            android:text="@string/me_setting_logout_hint"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/me_setting_about_v"
            android:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>