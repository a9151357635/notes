<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background_color"
              android:orientation="vertical">

    <include layout="@layout/title_top_view"/>
    <RelativeLayout
            android:id="@+id/me_user_detail_icon_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/stroke_ripple_mask_white_selector_drawable">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="头像"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="15sp"/>

        <ImageView
                android:id="@+id/me_user_detail_icon_next_iv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_next"/>
        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/me_user_detail_icon_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/me_user_detail_icon_next_iv"
                android:background="@drawable/stroke_ripple_nomask_red_selector_drawable"
                app:actualImageScaleType="focusCrop"
                app:roundAsCircle="true"
                app:overlayImage="@mipmap/default_icon"
                android:contentDescription="@null"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/app_e1e1e2_color"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/stroke_ripple_mask_white_selector_drawable">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="用户名"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="15sp"/>


        <TextView
                android:id="@+id/me_user_detail_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="15sp"/>
    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_e1e1e2_color"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/stroke_ripple_mask_white_selector_drawable">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="中文名"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/me_user_detail_zh_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="15sp"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_e1e1e2_color"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/app_main_tab_background_color"
            android:focusable="true"
            android:focusableInTouchMode="true">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="手机号"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="15dp"/>

        <TextView
                android:id="@+id/me_user_detail_iphone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="15sp"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/app_e1e1e2_color"/>

    <TextView
            android:id="@+id/me_setting_change_pay_pwd_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
            android:drawableRight="@drawable/ic_next"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/me_setting_change_pay_pwd_hint"
            android:textColor="@color/app_text_main_another_normal_color"
            android:textSize="15sp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/app_e1e1e2_color"/>

    <TextView
            android:id="@+id/me_setting_change_pwd_login_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
            android:drawableRight="@drawable/ic_next"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/me_setting_change_login_pwd_hint"
            android:textColor="@color/app_text_main_another_normal_color"
            android:textSize="15sp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/app_e1e1e2_color"/>
    <TextView
            android:id="@+id/me_logout_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_corners_selector_red_drawable"
            android:gravity="center"
            android:text="@string/me_setting_logout_hint"
            android:textColor="@color/white"/>
</LinearLayout>