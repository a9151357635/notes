<?xml version="1.0" encoding="utf-8"?>
<com.zyp.cardview.YcCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wallet_my_money_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ycCardCornerRadius="8dp"
        app:ycCardElevation="8dp"
        app:ycCardMaxElevation="8dp"
        app:ycCardPreventCornerOverlap="true"
        app:ycStartShadowColor="#F2F2F2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/white"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/wallet_my_total_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:text="总资产"/>
        <TextView
                android:id="@+id/wallet_my_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="16888.32"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/wallet_my_total_hint_tv"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/wallet_my_total_hint_tv"
                app:layout_constraintStart_toEndOf="@id/wallet_my_total_tv"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="元"/>
        <TextView
                android:id="@+id/wallet_my_today_money_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="今日盈亏"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"/>

        <TextView
                android:id="@+id/wallet_my_today_money_tv"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/wallet_my_today_money_hint_tv"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:textStyle="bold"
                android:text="+16888.32"
                android:textSize="18sp"
                android:textColor="@color/app_fount_color"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_fount_color"
                android:textSize="12sp"
                android:text="元"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@id/wallet_my_today_money_tv"
                app:layout_constraintTop_toBottomOf="@id/wallet_my_today_money_hint_tv"
                android:layout_marginTop="10dp"/>
        <View
                android:id="@+id/wallet_my_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:background="@color/app_e1e1e2_color"
                app:layout_constraintTop_toBottomOf="@+id/wallet_my_total_tv"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      app:layout_constraintTop_toBottomOf="@id/wallet_my_line"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:orientation="horizontal">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/wallet_my_happy_cl"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1.0"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/wallet_my_happy_hint_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textSize="13sp"
                        android:text="欢乐账户"/>
                <TextView
                        android:id="@+id/wallet_my_happy_tv"
                         android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:layout_constraintLeft_toLeftOf="parent"
                          android:layout_marginTop="5dp"
                          app:layout_constraintTop_toBottomOf="@+id/wallet_my_happy_hint_tv"
                          android:text="16,888.88"
                          android:textSize="16sp"/>
                <TextView
                        android:id="@+id/wallet_my_happy_income_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textColor="@color/app_fount_color"
                        android:text="+1658.32"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View android:layout_width="1dp"
                  android:layout_height="70dp"
                  app:layout_constraintTop_toBottomOf="@id/wallet_my_line"
                  app:layout_constraintStart_toEndOf="@+id/wallet_my_happy_cl"
                  app:layout_constraintEnd_toStartOf="@+id/wallet_my_ky_cl"

                  android:background="@color/app_e1e1e2_color"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/wallet_my_ky_cl"
                    app:layout_constraintTop_toBottomOf="@id/wallet_my_line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1.0"
                    android:layout_marginRight="10dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/wallet_my_ky_hint_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textSize="13sp"
                        android:text="开元账户"/>
                <TextView
                        android:id="@+id/wallet_my_ky_tv"
                        android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:layout_constraintLeft_toLeftOf="parent"
                          android:layout_marginTop="5dp"
                          app:layout_constraintTop_toBottomOf="@+id/wallet_my_ky_hint_tv"
                          android:text="16,888.88"
                          android:textSize="16sp"/>
                <TextView
                        android:id="@+id/wallet_my_ky_income_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textColor="@color/app_fount_color"
                        android:text="+1658.32"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.zyp.cardview.YcCardView>
