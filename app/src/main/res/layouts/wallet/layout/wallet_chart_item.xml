<?xml version="1.0" encoding="utf-8"?>
<com.zyp.cardview.YcCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wallet_history_chart_item_parent"
        android:layout_width="290dp"
        android:layout_height="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:ycCardCornerRadius="8dp"
        app:ycCardElevation="8dp"
        app:ycCardMaxElevation="8dp"
        app:ycCardBackgroundColor="@color/app_select_text_color"
        app:ycStartShadowColor="@color/app_f2f2f2_color"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/wallet_history_chart_item_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="3dp"
                android:textStyle="bold"
                android:text="165.28"
                android:textColor="@color/app_text_main_normal_color"
                android:textSize="17sp"/>
        <TextView
                android:id="@+id/wallet_history_chart_total_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/wallet_history_chart_item_total_tv"
                android:layout_marginStart="2dp"
                android:layout_marginTop="15dp"
                android:text="元"
                android:textColor="@color/app_text_main_normal_color"
                android:textSize="12sp"/>
        <TextView
                android:id="@+id/wallet_history_chart_item_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/app_text_main_normal_color"
                app:layout_constraintTop_toBottomOf="@id/wallet_history_chart_item_total_tv"
                android:textSize="12sp"
                android:text="输赢走势图"/>
        <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/wallet_history_chart_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.zyp.cardview.YcCardView>
