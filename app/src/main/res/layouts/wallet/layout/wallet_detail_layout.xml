<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_main_tab_background_color"
              android:orientation="vertical">

    <include layout="@layout/title_top_view" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_detail_money_hint"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="15sp" />

        <TextView
                android:id="@+id/wallet_detail_money_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/app_fount_color"
                android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_detail_type_hint"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="15sp" />

        <TextView
                android:id="@+id/wallet_detail_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="16sp" />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/app_e1e1e2_color" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_detail_state_hint"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="15sp" />

        <TextView
                android:id="@+id/wallet_detail_state_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_detail_description_hint"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="15sp" />

        <TextView
                android:id="@+id/wallet_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="16sp" />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/app_e1e1e2_color" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_detail_number_hint"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="15sp" />

        <TextView
                android:id="@+id/wallet_detail_water_number_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_detail_time_hint"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="15sp" />

        <TextView
                android:id="@+id/wallet_detail_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="16sp" />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/app_e1e1e2_color" />

</LinearLayout>