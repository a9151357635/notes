<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2">

    <include layout="@layout/title_top_view"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/withdraw_bank_card_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:background="@drawable/stroke_ripple_mask_white_selector_drawable"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_rl">

        <ImageView
                android:id="@+id/withdraw_bank_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_bank_cmb"/>
        <TextView
                android:id="@+id/withdraw_bank_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="招商银行"
                android:textSize="15sp"
                android:textColor="@color/app_text_main_normal_color"
                app:layout_constraintStart_toEndOf="@+id/withdraw_bank_iv"/>
        <TextView
                android:id="@+id/withdraw_bank_card_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:text="6214 *** *** *** 6250"
                android:textColor="@color/app_text_three_normal_color"
                app:layout_constraintStart_toEndOf="@+id/withdraw_bank_iv"
                app:layout_constraintTop_toBottomOf="@+id/withdraw_bank_name_tv"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_next"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/withdraw_money_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/withdraw_bank_card_cl"
            app:layout_constraintLeft_toLeftOf="parent">
        <TextView
                android:id="@+id/withdraw_money_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="提现金额(提款范围10-200000元)"/>
        <TextView
                android:id="@+id/withdraw_money_input_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/withdraw_money_hint_tv"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/app_text_main_normal_color"
                android:text="¥"/>
        <EditText
                android:id="@+id/withdraw_money_input_et"
                android:layout_width="match_parent" android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/withdraw_money_hint_tv"
                app:layout_constraintStart_toEndOf="@+id/withdraw_money_input_hint_tv"
                android:inputType="numberDecimal"
                android:paddingLeft="28dp"
                android:textSize="24sp"
                android:cursorVisible="true"
                android:focusable="true"
                android:maxLength="10"
                android:focusableInTouchMode="true"
                android:textCursorDrawable="@drawable/shape_editext_cursor_drawable"
                android:background="@android:color/transparent"/>
        <ImageView
                android:id="@+id/withdraw_input_close_iv"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/withdraw_money_hint_tv"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                android:src="@drawable/ic_close_gray"/>
        <View
                android:id="@+id/withdraw_money_input_line"
                android:layout_width="match_parent" android:layout_height="1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/withdraw_money_input_et"
                android:background="@color/app_e1e1e2_color"/>
        <TextView
                android:id="@+id/withdraw_available_hint_tv"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/withdraw_money_input_line"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="可用余额"/>
        <TextView
                android:id="@+id/withdraw_available_tv"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/withdraw_money_input_line"
                app:layout_constraintStart_toEndOf="@+id/withdraw_available_hint_tv"
                android:layout_marginLeft="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/app_message_color"
                android:layout_marginTop="10dp"
                android:text="16688.88元"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:id="@+id/withdraw_sure_btn"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:alpha="0.9"
            android:background="@drawable/shape_corners_selector_red_drawable"
            android:text="确认提现"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/withdraw_money_cl" />
</androidx.constraintlayout.widget.ConstraintLayout>