<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_background_color">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wallet_home_header_cl"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:background="@drawable/shape_fill_red_bg_me_head_drawable"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/wallet_home_refresh_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/stroke_ripple_nomask_red_selector_drawable"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_refresh"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/wallet_home_total_balance_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/wallet_home_refresh_iv"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="总资产(元)"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>
            <TextView
                    android:id="@+id/wallet_home_total_balance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/wallet_home_total_balance_hint_tv"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="￥16,888.88"
                    android:layout_marginTop="3dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/wallet_home_balance_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/wallet_home_total_balance_tv">
                <TextView
                        android:id="@+id/wallet_home_available_hint_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="5dp"
                        android:text="可用余额"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                        android:id="@+id/wallet_home_available_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/wallet_home_available_hint_tv"
                        android:text="16,868.88"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                        android:id="@+id/wallet_home_today_hint_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="今天输赢"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                        android:id="@+id/wallet_home_today_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/wallet_home_today_hint_tv"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="8,568.25"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                        android:id="@+id/wallet_home_unavailable_hint_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="未结金额"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        app:layout_constraintRight_toRightOf="parent"/>
                app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                        android:id="@+id/wallet_home_unavailable_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/wallet_home_unavailable_hint_tv"
                        android:text="888.88"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/white"
                        app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/wallet_home_balance_cl"
                    android:layout_marginTop="35dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.zyp.cardview.YcCardView
                android:id="@+id/wallet_home_operating_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:ycCardCornerRadius="8dp"
                app:ycCardElevation="5dp"
                app:ycCardMaxElevation="5dp"
                app:ycCardPreventCornerOverlap="true"
                app:ycStartShadowColor="#F2F2F2"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="170dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:background="@color/white"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/wallet_home_pay_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/app_text_main_normal_color"
                        android:text="充值"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_weight="1.0"
                        android:drawablePadding="6dp"
                        android:drawableTop="@mipmap/wallet_pay_icon"/>
                <TextView
                        android:id="@+id/wallet_home_withdraw_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_weight="1.0"
                        android:textColor="@color/app_text_main_normal_color"
                        android:text="提现"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:drawablePadding="6dp"
                        android:drawableTop="@mipmap/wallet_withdraw_icon"/>
                <TextView
                        android:id="@+id/wallet_home_convert_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_weight="1.0"
                        android:textColor="@color/app_text_main_normal_color"
                        android:text="转换"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:drawablePadding="6dp"
                        android:drawableTop="@mipmap/wallet_convert_icon"/>
                <TextView
                        android:id="@+id/wallet_home_my_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_weight="1.0"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@color/app_text_main_normal_color"
                        android:text="钱包"
                        android:gravity="center"
                        android:drawablePadding="6dp"
                        android:drawableTop="@mipmap/wallet_my_icon"/>

            </LinearLayout>
        </com.zyp.cardview.YcCardView>
        <TextView
                android:id="@+id/wallet_home_chart_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wallet_home_operating_cv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/app_text_main_another_normal_color"
                android:textSize="16sp"
                android:text="走势明细"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/wallet_home_chart_rv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wallet_home_chart_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="8dp"/>

        <TextView
                android:id="@+id/wallet_home_history_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:padding="8dp"
                android:text="金额明细"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/wallet_home_chart_rv"/>
        <com.ling.kotlin.widget.ListViewForScrollView
                android:id="@+id/wallet_home_history_rv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wallet_home_history_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>



